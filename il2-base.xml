<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/views.xml">

    <author>BARANGER Emmanuel (3D/FDM)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>

    <fuel-fraction>0.8</fuel-fraction>

    <startup>
     <splash-texture>Aircraft/IL-2/il2-splash.png</splash-texture>
    </startup>

    <sound>
      <path>Aircraft/IL-2/Sounds/il2-sound.xml</path>
    </sound>

    <model>
      <path archive="y">Aircraft/IL-2/Models/il2.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <submodels> 
      <serviceable type="bool">true</serviceable>
      <path>Aircraft/IL-2/Models/Effects/guns/submodels.xml</path>
    </submodels>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int type="int">0</int>  <!-- 0 immat -->
        <int type="int">0</int>  <!-- 1 immat -->
        <int type="int">0</int>  <!-- 2 immat -->
        <int type="int">0</int>  <!-- 3 immat -->
        <int type="int">0</int>  <!-- 4 immat -->
        <int type="int">0</int>  <!-- 5 immat -->
        <int type="bool">0</int> <!-- 6 smoke -->
        <int type="int">0</int>  <!-- 7 color -->
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
      </generic>
    </multiplay>

    <help>
      <title>Ilyoushin Il-2</title>
      <key>
        <name>d</name>
        <desc>Open/Close canopy</desc>
      </key>
      <key>
        <name>e</name>
        <desc>Guns fire</desc>
      </key>
    </help>

    <menubar include="Dialogs/il2-menu.xml"/>
<!--
    <systems>
      <electrical>
        <path>Aircraft/j3cub/cub-electrical.xml</path>
      </electrical>
    </systems> 
-->
  </sim>

  <yasim>
    <il2>
      <pilot-lb>180</pilot-lb>
    </il2>
  </yasim>

  <engines>
    <engine>
      <rpm type="double">700</rpm>
    </engine>
  </engines>

  <input>
    <keyboard include="Nasal/il2-keyboard.xml"/>
  </input>
 
  <nasal>
    <doors>
      <file>Aircraft/IL-2/Nasal/doors.nas</file>
    </doors>
    <il2>
      <file>Aircraft/IL-2/Nasal/immat.nas</file>
      <file>Aircraft/IL-2/Nasal/liveries.nas</file>
    </il2>
    <guns>
      <file>Aircraft/IL-2/Nasal/weapons.nas</file>
      <file>Aircraft/IL-2/Nasal/revi.nas</file>
    </guns>
  </nasal>

</PropertyList>

